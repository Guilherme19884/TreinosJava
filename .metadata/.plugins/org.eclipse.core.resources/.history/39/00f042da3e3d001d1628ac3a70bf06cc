package empresa;

public class Funcionario {
	private String nome;
	private String funcao;
	private int idade;
	private int id;
	
	public void pegarNome(String nome) {
		this.nome = nome;
	}
	public String mostrarNome() {
		return this.nome;
	}
	
	public void pegarFuncao(String funcao) {
		this.funcao = funcao;
	}
	public String mostrarFuncao() {
		return this.funcao;
	}
}
